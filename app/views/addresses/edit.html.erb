<h3>配送先編集</h3>

<%= form_for(@address) do |f| %>

	<table>

  <tr>
  <th>郵便番号（ハイフンなし）</th>
  <td><%= f.text_field :postal_code %></td>
  </tr> 

  <tr>
  <th>住所</th>
  <td><%= f.text_area :address %></td>
  </tr> 

  <tr>
  <th>宛名</th>
  <td><%= f.text_field :reciever %></td>
  </tr> 

</table>
 
  <%= f.submit '編集する' %>
 
<% end %>