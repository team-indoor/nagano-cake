<h3>配送先登録/一覧</h3>

<%= form_for(@address) do |f| %>

	<table>

  <tr>
  <th>郵便番号（ハイフンなし）</th>
  <td><%= f.text_field :postal_code %></td>
  </tr> 

  <tr>
  <th>住所</th>
  <td><%= f.text_area :address %></td>
  </tr> 

  <tr>
  <th>宛名</th>
  <td><%= f.text_field :reciever %></td>
  </tr> 

</table>
 
  <%= f.submit '登録する' %>
 
<% end %>

<table class="table">
		<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>
	    </thead>
	    <% @address.each do |address| %>
	    <tbody>
	    	<tr>
	    		<td>address.postal_code</td>
	    		<td>address.address</td>
	    		<td>address.reciever</td>
	    		<td><%= link_to "編集する", edit_member_address_path, class: 'btn btn-default' %><%= link_to "削除する", member_address_path(@address.id), method: :delete, "data-confirm" => "Are you sure？" %></td>
	    	</tr>
	    <% end %>
	    </tbody>
    </table>
