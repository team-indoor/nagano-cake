<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="cart-title" style="margin-left: 5%;">
  <mark style="font-size: 20px;">注文履歴一覧</mark>
</div>
    <table class="table table-inverse margin-30">
      <thead>
        <tr class="active">
          <th style="width:15%">購入日時</th>
          <th style="width:10%">購入者</th>
          <th style="width:10%">注文個数</th>
          <th style="width:10%">注文ステータス</th>
        </tr>
      </thead>

      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admins_order_path(order) %></td>
          <td><%= "#{order.member.last_name} #{order.member.first_name}" %></td>
          <td><%= all_amount_count(order.order_details) %></td>
          <td>
            <% if order.order_status == 0 %>
              <%= "入金待ち" %>
            <% elsif order.order_status == 1 %>
              <%= "入金確認" %>
            <% elsif order.order_status == 2 %>
              <%= "製作中" %>
            <% elsif order.order_status == 3 %>
              <%= "発送準備中" %>
            <% elsif order.order_status == 4 %>
              <%= "発送済み" %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="paginate-tag">
      <%= paginate @orders %>
    </div>

  </div>
</div>
