<mark>商品登録</mark>
<%= form_for @product, url: admins_products_path do |f| %>
  <div class="row">
    <div class="col-xs-4">
      <div class="image-form">
        <div class="image-box">
          <%= image_tag("no-image.jpg", alt:"写真を挿入") %>
        </div>
        <%= f.attachment_field :image %>
      </div>
    </div>
    <div class="col-xs-5">
      <div class="field form-group">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :introduction, "商品紹介" %>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :category_id, "ジャンル" %><br>
        <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "--選択してください--", class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :price, "税抜き価格" %>
        <%= f.text_field :price, class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :is_saling, "販売ステータス" %><br>
        <%= f.select :is_saling, {販売中: 1, 販売停止: 0}, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-2 col-xs-offset-10">
      <div class="action">
        <%= f.submit "新規登録", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>
<% end %>
