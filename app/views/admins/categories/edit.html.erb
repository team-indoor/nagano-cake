<div class="mypage-title" style="margin-left: 5%;">
  <mark style="font-size: 20px;">ジャンル編集</mark>
</div>

<div class="row">
  <div class="col-xs-6 margin-30">
    <div class="form-horizontal">
      <%= form_for @category, url: admins_category_path(@category) do |f| %>
        <%= f.label :name, "ジャンル" %>
        <%= f.text_field :name %>
        <label><%= f.radio_button :is_active, true %> 有効 </label>
        <label><%= f.radio_button :is_active, false %> 無効 </label>
        <%= f.submit "変更を保存する", class: "btn btn-primary btn-md" %>
      <% end %>
    </div>
  </div>
</div>