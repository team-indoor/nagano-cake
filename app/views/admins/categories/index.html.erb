<div class="row">
  <div class="col-xs-8 col-xs-offset-2">

    <div class="mypage-title" style="margin-left: 5%;">
      <mark style="font-size: 20px;">ジャンル一覧・追加</mark>
        </div>
    <div class="row margin-30">
      <div class="col-xs-8">
        <div class="category-edit-form">
          <%= form_for @category, url: admins_categories_path do |f| %>
            <%= f.label :name, "ジャンル" %>
            <%= f.text_field :name, style: "margin-right: 10px" %>
            <label><%= f.radio_button :is_active, true, checked: true %> 有効 </label>
            <label><%= f.radio_button :is_active, false %> 無効 </label>
            <%= f.submit "追加", class: "btn btn-primary btn-md", style: "margin-left: 10px" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-8 margin-30">
        <table class="table">
          <% if @categories.any? %>
            <thead>
              <tr class="active">
                <th style="width:30%">ジャンル</th>
                <th style="width:40%">状態</th>
                <th style="width:30%"></th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td><%= category.name %></td>
                  <td>
                    <% if category.is_active? %>
                      有効
                    <% else %>
                      無効
                    <% end %>
                  </td>
                  <td>
                    <%= link_to "編集する", edit_admins_category_path(category), class: "btn btn-primary btn-md" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          <% else %>
            <p>該当するジャンルはありません</p>
          <% end %>
        </table>
      </div>
    </div>

</div>
</div>