<h3>@member.last_name @member.first_nameさんの会員情報編集</h3>

<div class="row">
<div class="col-xs-8 col-xs-offset-2">

	<%= form_for(@member) do |f| %>

	<table>
    <tr>
	<th>会員ID</th>
  　<td>member.id</td>
    </tr>

  <tr>
  <th>氏名</th>
  <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
  </tr> 
 
  <tr>
  <th>フリガナ</th>
  <td><%= f.text_field :kana_last_name %><%= f.text_field :kana_first_name %></td>
  </tr> 

  <tr>
  <th>郵便番号</th>
  <td><%= text_field :postal_code %></td>
  </tr> 

  <tr>
  <th>住所</th>
  <td><%= text_area :address %></td>
  </tr> 

  <tr>
  <th>電話番号</th>
  <td><%= text_field :phone_number %></td>
  </tr> 

  <tr>
  <th>メールアドレス</th>
  <td><%= text_field :email %></td>
  </tr> 

  <tr>
  <th>会員ステータス</th>
  <td><label><%= f.radio_button :is_active, :true %>有効</label><label><%= f.radio_button :is_active, :false %>退会済み</label></td>
  </tr> 

</table>
 
  <%= f.submit '変更を保存する' %>
 
<% end %>

</div>
</div>
