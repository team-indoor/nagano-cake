<div class="edit-title">
  <mark style="font-size: 20px;">
    <%= @member.last_name %>
    <%= @member.first_name %>
  さんの会員情報編集
  </mark>
</div>

<div class="row">
	<div class="col-xs-8 col-xs-offset-2">


		<table class="table table-borderless">
			<tr>
				<th>会員ID</th>
				<td>
				  <%= @member.id %>
				</td>
			</tr>

			<%= form_for @member, url: "/admins/members/#{@member.id}" do |f| %>

				<tr>
				  <th>氏名</th>
				  <td>
				    <%= f.text_field :last_name %>
				    <%= f.text_field :first_name %>
				  </td>
				</tr> 

				<tr>
				  <th>フリガナ</th>
				  <td>
				    <%= f.text_field :kana_last_name %>
				    <%= f.text_field :kana_first_name %>
				  </td>
				</tr> 

				<tr>
				  <th>郵便番号</th>
				  <td>
					<%= f.text_field :postal_code %>
				  </td>
			    </tr> 

				<tr>
				  <th>住所</th>
				  <td>
				  	<%= f.text_area :address %>
				  </td>
				</tr> 

				<tr>
				  <th>電話番号</th>
				  <td>
				  	<%= f.text_field :phone_number %>
				  </td>
				</tr> 

				<tr>
				  <th>メールアドレス</th>
				  <td>
				  	<%= f.text_field :email %>
				  </td>
				</tr> 

				<tr>
				  <th>会員ステータス</th>
				  <td>
				  	<label>
				  	  <%= f.radio_button :is_active, :true %>有効
				  	</label>
				  	<label>
				  	  <%= f.radio_button :is_active, :false %>退会済み
				  	</label>
				  </td>
				</tr> 
		</table>

		    <%= f.submit('変更を保存する',class: 'btn btn-primary') %>
		    <% end %>
	</div>
</div>
