<div class="edit-title">
  <mark style="font-size: 20px;">
    <%= @member.last_name %>
    <%= @member.first_name %>
  さんの会員情報編集
  </mark>
</div>

<div class="row">
	<div class="col-xs-8 col-xs-offset-2">

　　　　　<%= form_for @member, url: admins_member_path do |f| %>

		<table border="0">
			<tr>
				<th>会員ID</th>
				<td>
				  <%= @member.id %>
				</td>
			</tr>


			<tr>
				<th>氏名</th>
				<td><%= f.text_field :last_name, class: "form-control" %></td>
				<td>&nbsp;&nbsp;&nbsp;</td>
				<td><%= f.text_field :first_name, class: "form-control" %></td>
			</tr> 

			<tr>
				<th>フリガナ</th>
				<td><%= f.text_field :kana_last_name, class: "form-control" %></td>
				<td>&nbsp;&nbsp;&nbsp;</td>
				<td><%= f.text_field :kana_first_name, class: "form-control" %></td>
			</tr> 

			<tr>
				<th>郵便番号</th>
				<td colspan="3">
			      <%= f.text_field :postal_code, class: "form-control" %>
				</td>
			</tr> 

		    <tr>
				<th>住所</th>
				<td colspan="3">
				  <%= f.text_field :address, class: "form-control" %>
				</td>
			</tr> 

			<tr>
				<th>電話番号</th>
				<td colspan="3">
				  <%= f.text_field :phone_number, class: "form-control" %>
				</td>
			</tr> 

			<tr>
				<th>メールアドレス</th>
				<td colspan="3">
				  <%= f.text_field :email, class: "form-control" %>
				</td>
			</tr> 

			<tr>
				<th>会員ステータス</th>
				<td>
				 <label>
				  	<%= f.radio_button :is_active, :true %>有効
				 </label>
				 <label>
				  	<%= f.radio_button :is_active, :false %>退会済み
				 </label>
				</td>
			</tr> 
		</table>

		    <%= f.submit('変更を保存する',class: 'btn btn-primary', style: 'margin: 10px 0px 20px 0px') %>
		    <% end %>
	</div>
</div>
