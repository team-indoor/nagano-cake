<h3>会員一覧</h3>
<div class="row">
<div class="col-xs-8 col-xs-offset-2">

	<table class="table">
		<thead>
		<tr>
			<th>会員ID</th>
			<th>氏名</th>
			<th>メールアドレス</th>
			<th>ステータス</th>
		</tr>
	    </thead>
	    <% @members.each do |member| %>
	    <tbody>
	    	<tr>
	    		<td>member.id</td>
	    		<td><span>member.last_name</span><span>member.first_name</span></td>
	    		<td>member.email</td>
	    		<td>member.is_active</td>
	    	</tr>
	    <% end %>
	    </tbody>
    </table>
</div>
</div>
