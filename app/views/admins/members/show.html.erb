<div class="row">
	<div class="col-xs-8 col-xs-offset-2">

		<div class="show-title">
			<mark style="font-size: 20px;">
				<%= @member.last_name %>
				<%= @member.first_name %>
				さんの会員詳細
			</mark>
		</div>

		<table border="0">
			<tr>
				<th>顧客ID</th>
				<td>
					<%= @member.id %>
					<div class="status">
						<% if @member.is_active == true %>
              <p>有効会員</p>
						<% else %>
              <p>退会済会員</p>
						<% end %>
					</div>
				</td>
			</tr>
			<tr>
				<th>氏名</th>
				<td>
					<%= @member.last_name %>
					<%= @member.first_name %>
				</td>
			</tr>
			<tr>
				<th>フリガナ</th>
				<td>
					<%= @member.kana_last_name %>
					<%= @member.kana_first_name %>
				</td>
			</tr>
			<tr>
				<th>郵便番号</th>
				<td><%= @member.postal_code %></td>
			</tr>
			<tr>
				<th>住所</th>
				<td><%= @member.address %></td>
			</tr>
			<tr>
				<th>電話番号</th>
				<td><%= @member.phone_number %></td>
			</tr>
			<tr>
				<th>メールアドレス</th>
				<td><%= @member.email %></td>
			</tr>
		</table>

		<div class="margin">
			<%=link_to "編集する", edit_admins_member_path(@member.id),class: "btn btn-primary", style:"margin-right:30px" %>
			<%=link_to "注文履歴一覧を見る",  admins_orders_path(member_id: @member.id, name: "member") ,class: "btn btn-primary" %>
		</div>

	</div>
</div>