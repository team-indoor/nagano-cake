<div class="row">
<div class="col-xs-8 col-xs-offset-2">

<h3><%= @member.last_name %> <%= @member.first_name %>さんの会員詳細</h3>

<table>
	<tr>
		<th>顧客ID</th>
		<td><%= @member.id %> <%= @member.is_active %></td>
	</tr>
	<tr>
		<th>氏名</th>
		<td><%= @member.last_name %> <%= @member.first_name %></td>
	</tr>
	<tr>
		<th>フリガナ</th>
		<td><%= @member.kana_last_name %> <%= @member.kana_first_name %></td>
	</tr>
	<tr>
		<th>郵便番号</th>
		<td><%= @member.postal_code %></td>
	</tr>
	<tr>
		<th>住所</th>
		<td><%= @member.address %></td>
	</tr>
	<tr>
		<th>電話番号</th>
		<td><%= @member.phone_number %></td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td><%= @member.email %></td>
	</tr>
</table>

<%=link_to "編集する",  edit_admins_member_path(@member.id) ,class: "btn btn-primary"%>
<%=link_to "注文履歴一覧を見る",  admins_orders_path(@member.id) ,class: "btn btn-primary"%>

</div>
</div>
