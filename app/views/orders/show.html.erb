<h3>注文履歴詳細</h3>

<h4>注文情報</h4>
<table class="table table-bordered">
	<tr>
		<div class="field">
			<th>注文日</th>
			<td><%= @order.created_at %></td>
		</div>
	</tr>
	<tr>
		<div class="field">
			<th>配送先</th>
			<td>
				<%= @order.postal_code %>
				<%= @order.address %>
				<%= @order.reciever %>
			</td>
		</div>
	</tr>
	<tr>
		<div class="field">
			<th>支払方法</th>
			<td>
				<% if @order.payment == 0 %>
				<p>クレジット</p>
				<% else %>
				<p>銀行振込</p>
			</td>
		</div>
	</tr>
	<tr>
		<div class="field">
			<th>ステータス</th>
			<td>
				<% if @order.order_status == 0 %>
				<p>入金待ち</p>
				<% ifelse @order.order_status == 1 %>
				<p>入金確認</p>
				<% ifelse @order.order_status == 2 %>
				<p>製作中</p>
				<% ifelse @order.order_status == 3 %>
				<p>発送準備中</p>
				<% else %>
				<p>発送済み</p>
			</td>
		</div>
	</tr>

<h4>請求情報</h4>
<table class="table table-bordered">
	<tr>
		<div class="field">
			<th>商品合計</th>
			<td><%= @order.total_price %></td>
		</div>
	</tr>
	<tr>
		<div class="field">
			<th>配送料</th>
			<td><%= @order.postage %></td>
		</div>
	</tr>
	<tr>
		<div class="field">
			<th>ご請求額</th>
			<td><%= "#{@order.total_price} + #{@order.postage}" %></td>
		</div>
	</tr>

<h4>注文内容</h4>
<table class="table">
	<thead>
		<tr>
			<th>商品</th>
			<th>単価（税込）</th>
			<th>個数</th>
			<th>小計</th>
		</tr>
	</thead>
  <% @order.each do |order| %>
	<tbody>
		<tr>
			<td><%= order.name.product_id %></td>
			<td><%= order.price %></td>
			<td><%= order.amount %></td>
			<td><%= "#{@order.price} * #{@order.amount}" %></td>
		</tr>
	</tbody>
  <% end %>
</table>