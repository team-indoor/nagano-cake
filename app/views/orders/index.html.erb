<div class="mypage-title">
  <mark style="font-size: 20px;">注文履歴一覧</mark>
</div>

  <table class="table-bordered">
	  <thead>
		<tr>
			<th bgcolor="#f5f5f5", style="width:150px;">注文日</th>
			<th bgcolor="#f5f5f5", style="width:250px;">配送先</th>
			<th bgcolor="#f5f5f5", style="width:150px;">注文商品</th>
			<th bgcolor="#f5f5f5", style="width:120px;">支払金額</th>
			<th bgcolor="#f5f5f5", style="width:150px;">ステータス</th>
			<th bgcolor="#f5f5f5", style="width:150px;">注文詳細</th>
		</tr>
	  </thead>
    <% @orders.each do |order| %>
	  <tbody>
		<tr>
			<td><%= order.created_at %></td>
			<td>
				<%= order.postal_code %><br>
				<%= order.address %><br>
				<%= order.reciever %>
			</td>
			<td><%= order.name.product_id %></td>
			<td><%= "#{order.total_price} + #{order.postage}" %>円</td>
			<td>
				if <% order.order_status == 0 %>{
				  print "入金待ち";
				}else if<% order.order_status == 1 %>{
				  print "入金確認";
				}else if<% order.order_status == 2 %>{
				  print "製作中";
				}else if<% order.order_status == 3 %>{
				  print "発送準備中";
				} else{
				  print "発送済み";
				}
			</td>
			<td><%=  link_to "表示する", member_order_path, class:"btn btn-primary" %></td>
		</tr>
	  </tbody>
    <% end %>
  </table>