<h3>注文履歴一覧</h3>

<table class="table-bordered">
	<thead>
		<tr>
			<th bgcolor="#f5f5f5">注文日</th>
			<th bgcolor="#f5f5f5">配送先</th>
			<th bgcolor="#f5f5f5">注文商品</th>
			<th bgcolor="#f5f5f5">支払金額</th>
			<th bgcolor="#f5f5f5">ステータス</th>
			<th bgcolor="#f5f5f5">注文詳細</th>
		</tr>
	</thead>
  <% @orders.each do |order| %>
	<tbody>
		<tr>
			<td><%= order.created_at %></td>
			<td>
				<%= order.postal_code %>
				<%= order.address %>
				<%= order.reciever %>
			</td>
			<td><%= order.name.product_id %></td>
			<td><%= "#{order.total_price} + #{order.postage}" %>円</td>
			<td>
				<% if order.order_status == 0 %>
				<p>入金待ち</p>
				<% ifelse order.order_status == 1 %>
				<p>入金確認</p>
				<% ifelse order.order_status == 2 %>
				<p>製作中</p>
				<% ifelse order.order_status == 3 %>
				<p>発送準備中</p>
				<% else %>
				<p>発送済み</p>
				<% end %>
			</td>
			<td><%=  link_to "表示する", member_order_path, class:"btn btn-primary" %></td>
		</tr>
	</tbody>
  <% end %>
</table>