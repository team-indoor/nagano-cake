<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>

  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <div class="sign_up">
        <mark>新規会員登録</mark>
      </div>

      

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <table class="table table-borderless">
        <tr>
          <div class="field">
            <th>名前</th>
            <td>
              <%= f.label :last_name, '(姓)' %>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
              <%= f.label :first_name, '(名)' %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <th>フリガナ</th>
            <td>
              <%= f.label :kana_last_name, '(セイ)' %>
              <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
              <%= f.label :kana_first_name, '(メイ)' %>
              <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
            </td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <th>メールアドレス</th>
            <td>
              <% f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <th>郵便番号(ハイフンなし)</th>
            <td>
              <% f.label :postal_code %>
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <th>住所</th>
            <td>
              <% f.label :address %>
              <%= f.text_field :address, :size=>"60", autofocus: true, autocomplete: "address" %>
            </td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <th>電話番号(ハイフンなし)</th>
            <td>
              <% f.label :phone_number %>
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
            </td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <th>パスワード</th>
            <td>
              <% f.label :password %>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <th>パスワード確認</th>
            <td>
              <% f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
          </div>
        </tr>

      </table>
      <div class="actions">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
      
      <% end %>
      

      <div class="sign_in_page">
        <mark>既に登録済みの方</mark>
        <p><%= render "members/shared/links" %>からログインしてください</p>
      </div>
    </div>
    <div class="col-xs-1"></div>
  </div>

</body>
</html>
