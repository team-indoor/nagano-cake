<h3>マイページ</h3>

<h3>登録情報</h3><%= link_to "編集する", edit_member_path, class: 'btn btn-default' %><%= link_to "パスワードを変更する", edit_member_password_path, class: 'btn btn-default' %>

<table>
  <tr>
    <th>氏名</th>
    <td><span>@member.last_name</span><span>@member.first_name</span></td>
  </tr>
    <tr>
    <th>カナ</th>
    <td><span>@member.kana_last_name</span><span>@member.kana_first_name</span></td>
  </tr>  
  <tr>
    <th>郵便番号</th>
    <td>@member.postal_code</td>
  </tr>
  <tr>
    <th>住所</th>
    <td>@member.address</td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td>@member.phone_number</td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td>@member.email</td>
  </tr>
</table>

<h3>配送先</h3><%= link_to "一覧を見る", member_addresses_path, class: 'btn btn-default' %>
